{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AiModel": {
    "ModelName": "llama3.2:3b",
    "MaxConcurrency": 3,
    "TimeoutSeconds": 120
  },
  "FileLimitOptions": {
    "MaxFileCount": 50,
    "MaxTotalCandidates": 50,
    "MaxFileSizeBytes": 10485760,
    "MaxTotalSizeBytes": 104857600,
    "MaxResumeTextLength": 10000,
    "MaxJobDescriptionLength": 20000,
    "GlobalTimeoutSeconds": 300,
    "AllowedExtensions": [
      ".pdf",
      ".docx",
      ".txt",
      ".png",
      ".jpg",
      ".jpeg",
      ".zip"
    ]
  },
  "OcrOptions": {
    "TimeoutSeconds": 30,
    "Language": "eng"
  },
  "Scoring": {
    "StrongYesThreshold": 85,
    "YesThreshold": 70,
    "MaybeThreshold": 55
  },
  "ZipOptions": {
    "MaxItems": 10,
    "MaxEntryBytes": 10485760,
    "MaxDepth": 5
  }
}